/*
  Prisma schema defining the database models for the application.
  Models:
  - User: Stores user info and OAuth details.
  - PromptLog: Logs user prompts and AI responses.
  - PRReview: Stores GitHub PR review data.
*/

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  image         String?
  githubId      String?  @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  promptLogs    PromptLog[]
  prReviews     PRReview[]
  // Add any additional user settings fields here
}

model PromptLog {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  prompt      String
  response    String
  createdAt   DateTime @default(now())
}

model PRReview {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  prNumber    Int
  repo        String
  summary     String
  riskLevel   String
  createdAt   DateTime @default(now())
}
